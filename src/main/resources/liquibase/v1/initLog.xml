<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet  id="1" author="kvv">
        <preConditions>
            <not>
                <tableExists tableName="states"/>
            </not>
        </preConditions>
        <createTable tableName="states">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="kvv">
        <preConditions>
            <not>
                <tableExists tableName="nodes"/>
            </not>
        </preConditions>
        <createTable tableName="nodes">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="postcode" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="kvv">
        <preConditions>
            <not>
                <tableExists tableName="types"/>
            </not>
        </preConditions>
        <createTable tableName="types">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="kvv">
        <preConditions>
            <not>
                <tableExists tableName="packages"/>
            </not>
        </preConditions>
        <createTable tableName="packages">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="identifier" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="recipient" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="kvv">
        <preConditions>
            <not>
                <tableExists tableName="story_points"/>
            </not>
        </preConditions>
        <createTable tableName="story_points">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="happened" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name = "node_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="package_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="package_state" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="6" author="kvv">
        <addForeignKeyConstraint baseTableName="packages" baseColumnNames="type_id" constraintName="fk_type_package" referencedTableName="types"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="7" author="kvv">
        <addForeignKeyConstraint baseTableName="story_points" baseColumnNames="package_id" constraintName="fk_package_story" referencedTableName="packages"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="8" author="kvv">
        <addForeignKeyConstraint baseTableName="story_points" baseColumnNames="node_id" constraintName="fk_node_story" referencedTableName="nodes"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="9" author="kvv">
        <preConditions>
            <not>
                <columnExists tableName="packages" columnName="destination_id"/>
            </not>
        </preConditions>
        <addColumn tableName="packages">
            <column name="destination_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="10" author="kvv">
        <addForeignKeyConstraint baseTableName="packages" baseColumnNames="destination_id" constraintName="fk_node_package" referencedTableName="nodes"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="11" author="kvv">
        <preConditions>
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM packages WHERE state NOT IN ('STORAGE', 'MOVEMENT')</sqlCheck>
        </preConditions>
        <sql>
            ALTER TABLE packages
            ADD CONSTRAINT enum_state CHECK(state IN ('STORAGE', 'MOVEMENT'))
        </sql>
        <rollback>
            <sql>
               ALTER TABLE packages DROP CONSTRAINT enum_state;
            </sql>
        </rollback>
    </changeSet>
    
    <changeSet id="12" author="kvv">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="type_id_sequence"></sequenceExists>
            </not>
        </preConditions>

        <createSequence sequenceName="type_id_sequence" cacheSize="1" startValue="1" incrementBy="5" ></createSequence>
    </changeSet>

    <changeSet id="13" author="kvv">
        <preConditions>
            <not>
                <sequenceExists sequenceName="node_id_sequence"></sequenceExists>
            </not>
        </preConditions>

        <createSequence sequenceName="node_id_sequence" cacheSize="1" startValue="1" incrementBy="5"></createSequence>
    </changeSet>

    <changeSet id="14" author="kvv">
        <preConditions>
            <not>
                <sequenceExists sequenceName="package_id_sequence"></sequenceExists>
            </not>
        </preConditions>

        <createSequence sequenceName="package_id_sequence" cacheSize="5" startValue="1" incrementBy="50"></createSequence>
    </changeSet>

</databaseChangeLog>